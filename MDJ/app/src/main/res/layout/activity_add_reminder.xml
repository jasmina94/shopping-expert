<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddReminder"
    android:background="@color/colorAccent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_trash"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/addReminder">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/layoutLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/actionBarSize"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/friend_list_is_empty"
            android:minHeight="200dp"
            android:minWidth="120dp"
            android:src="@drawable/reminder" />

        <EditText
            android:id="@+id/showTime"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:longClickable="false"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Click to set time"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColorHint="@color/colorAccent"
            android:inputType="time"/>

        <EditText
            android:id="@+id/showDate"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:longClickable="false"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Click to set date"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:textSize="25sp"
            android:textColorHint="@color/colorAccent"
            android:inputType="date" />

            <Button
                android:id="@+id/add_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:textSize="20sp"
                android:text="Add"
                android:layout_alignParentLeft="true"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>

            <Button
                android:id="@+id/remove_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Remove"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAccent"/>
    </LinearLayout>

</RelativeLayout>